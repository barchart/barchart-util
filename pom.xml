<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.barchart.base</groupId>
		<artifactId>barchart-archon</artifactId>
		<version>2.3.6</version>
	</parent>

	<groupId>com.barchart.util</groupId>
	<artifactId>barchart-util</artifactId>
	<version>2.0.15-SNAPSHOT</version>
	<packaging>pom</packaging>

	<url>https://github.com/barchart/barchart-util</url>

	<issueManagement>
		<system>github</system>
		<url>https://github.com/barchart/barchart-util/issues</url>
	</issueManagement>

	<scm>
		<url>https://github.com/barchart/barchart-util</url>
		<connection>scm:git:git://github.com/barchart/barchart-util.git</connection>
		<developerConnection>scm:git:ssh://git@github.com/barchart/barchart-util.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<modules>

		<module>barchart-util-anno</module>
		<module>barchart-util-json</module>
		<module>barchart-util-ascii</module>
		<module>barchart-util-bench</module>
		<module>barchart-util-clone</module>
		<module>barchart-util-enums</module>
		<module>barchart-util-math</module>
		<module>barchart-util-thread</module>
		<module>barchart-util-values</module>
		<module>barchart-util-collections</module>
		<module>barchart-util-concurrent</module>
		<module>barchart-util-test</module>

	</modules>

	<properties>

		<maven.site.skip>true</maven.site.skip>

	</properties>

	<!-- publish maven site to github -->
	<profiles>

		<profile>
			<id>maven-site</id>
			<activation>
				<!-- selectively enable maven site -->
				<file>
					<exists>maven-site.md</exists>
				</file>
			</activation>
			<properties>
				<maven.site.skip>false</maven.site.skip>
			</properties>
			<build>
				<plugins>

					<!-- subject to github rate limit 5k/hr -->
					<plugin>
						<groupId>com.github.github</groupId>
						<artifactId>site-maven-plugin</artifactId>
						<version>0.7</version>
						<executions>
							<execution>
								<id>maven-site</id>
								<goals>
									<goal>site</goal>
								</goals>
								<phase>site</phase>
								<configuration>
									<merge>true</merge>
									<server>github</server>
									<path>site/${project.artifactId}</path>
									<message>site ${project.artifactId}-${project.version}</message>
								</configuration>
							</execution>
						</executions>
					</plugin>

				</plugins>
			</build>
		</profile>

	</profiles>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<stylesheetfile>${basedir}/src/site/stylesheet.css</stylesheetfile>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

</project>
